	# Extended - 鞭射程増加
	Extended.RangeMult: 1.3
	
	# Fabled - スロット効率とクリティカル
	Fabled.MinionSlotMult: 0.8
	Fabled.Crit: 0.05
	Fabled.Kb: 1.6
	
	# Focused - スロット・ダメージ倍率
	Focused.MinionSlotAndDmgMult: 1.4
	
	# Focused_Whip - 召喚ダメージとスロット減少
	Focused_Whip.SummonDmgAddition: 0.1
	Focused_Whip.MinionSlotDecrease: 1
	
	# Oracle - 鞭タグ効果
	Oracle.TagCrit: 0.08
	Oracle.TagDmg: 0.07
