{
	"$schema": "https://json.schemastore.org/tasks.json",
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build TranslateTest2 (dotnet build)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"TranslateTest2/TranslateTest2.csproj",
				"-v",
				"m"
			],
			"group": "build",
			"problemMatcher": [
				"$msbuild"
			]
		},
		{
			"label": "Build TranslateTest2 (tModLoader)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"D:/SteamLibrary/steamapps/common/tModLoader/tModLoader.dll",
				"-server",
				"-build",
				"d:/dorad/Documents/My Games/Terraria/tModLoader/ModSources/TranslateTest2/",
				"-eac",
				"d:/dorad/Documents/My Games/Terraria/tModLoader/ModSources/TranslateTest2/bin/Debug/net8.0/TranslateTest2.dll"
			],
			"options": {
				"cwd": "D:/SteamLibrary/steamapps/common/tModLoader"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Build TranslateTest2 (tModLoader exe)",
			"type": "shell",
			"command": "D:/SteamLibrary/steamapps/common/tModLoader/tModLoader.exe",
			"args": [
				"-server",
				"-build",
				"d:/dorad/Documents/My Games/Terraria/tModLoader/ModSources/TranslateTest2/",
				"-eac",
				"d:/dorad/Documents/My Games/Terraria/tModLoader/ModSources/TranslateTest2/bin/Debug/net8.0/TranslateTest2.dll"
			],
			"options": {
				"cwd": "D:/SteamLibrary/steamapps/common/tModLoader"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "HJSON Audit (quick)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/check-hjson.ps1"
			],
			"problemMatcher": []
		},
		{
			"label": "Build + HJSON Audit",
			"type": "shell",
			"command": "echo",
			"args": [
				"Build + Audit complete"
			],
			"dependsOn": [
				"Build TranslateTest2 (dotnet build)",
				"HJSON Audit (quick)"
			],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build + HJSON Audit",
			"type": "shell",
			"command": "echo",
			"args": [
				"Build + Audit complete"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Build + HJSON Audit (combo)",
			"type": "shell",
			"command": "echo",
			"args": [
				"Build + Audit complete"
			],
			"group": "build"
		}
	]
}