using System;
using System.Collections.Generic;
using Terraria;
using Terraria.ID;
using Terraria.Localization;
using Terraria.ModLoader;

namespace TranslateTest2.Prefixes
{
    public class Oracle : ModPrefix
    {
        public static float TagCrit = 0.08f;
        public static float TagDmg = 0.07f;
        public static float RangeMult = 1.35f;

        public override PrefixCategory Category => PrefixCategory.Melee;

        public override float RollChance(Item item) => 0.35f;

        public override bool CanRoll(Item item) => item.shoot > ProjectileID.None && ProjectileID.Sets.IsAWhip[item.shoot];

        public override void SetStats(
            ref float damageMult,
            ref float knockbackMult,
            ref float useTimeMult,
            ref float scaleMult,
            ref float shootSpeedMult,
            ref float manaMult,
            ref int critBonus)
        {
            damageMult = 1.2f;
            useTimeMult *= 0.8f;
        }

        public override void ModifyValue(ref float valueMult) => valueMult *= 3f;

        public override void Apply(Item item)
        {
            var globalItem = item.global();
            globalItem.CanGiveTag = true;
            if (globalItem.wTag == null)
                globalItem.wTag = new WhipTag("oracle", 0);
            globalItem.wTag.CritAdd += TagCrit;
            globalItem.wTag.TagDamage = (int)Math.Ceiling(item.damage * TagDmg);
            globalItem.WhipRangeMult += RangeMult - 1f;
            
            // デバッグ情報を追加
            try
            {
                TranslateTest2.Instance?.Logger?.Debug($"Oracle Apply - Item: {item.Name}, RangeMult: {RangeMult}, WhipRangeMult set to: {globalItem.WhipRangeMult}");
            }
            catch { }
        }

        public override IEnumerable<TooltipLine> GetTooltipLines(Item item)
        {
            // AdditionalTooltipシステムを使用してローカリゼーション対応
            string tooltipText;
            var key = $"Mods.TranslateTest2.Prefix{Name}Descr";
            
            try
            {
                tooltipText = Language.GetTextValue(key);
                TranslateTest2.Instance?.Logger?.Debug($"Oracle Direct Key: {key} -> \"{tooltipText}\"");
                
                // キーと値が同じ場合（ローカリゼーションが見つからない）、フォールバックを使用
                if (string.IsNullOrEmpty(tooltipText) || tooltipText == key)
                {
                    tooltipText = AdditionalTooltip.Value;
                    TranslateTest2.Instance?.Logger?.Debug($"Oracle Using fallback: \"{tooltipText}\"");
                }
            }
            catch (Exception ex)
            {
                tooltipText = AdditionalTooltip.Value;
                TranslateTest2.Instance?.Logger?.Debug($"Oracle Exception fallback: {ex.Message}");
            }

            var tl = new TooltipLine(Mod, "PrefixDescription", tooltipText)
            {
                IsModifier = true,
                IsModifierBad = false
            };

            // プレースホルダーを実際の値に置換
            int tagDamage = (int)Math.Ceiling(item.damage * TagDmg);
            float critPercent = TagCrit * 100f;
            float rangePercent = (RangeMult - 1f) * 100f;
            
            tl.Text = tl.Text.Replace("{A}", $"{critPercent:0}")      // クリティカル%
                           .Replace("{B}", $"{TagDmg * 100:0}")       // タグダメージ%
                           .Replace("{C}", $"{rangePercent:0}");      // 射程%

            TranslateTest2.Instance?.Logger?.Debug($"Oracle Final tooltip: \"{tl.Text}\"");

            yield return tl;
        }

        /// <summary>
        /// 元のSummonerPrefix方式: ローカリゼーションからツールチップテキストを取得
        /// </summary>
        public LocalizedText AdditionalTooltip
        {
            get
            {
                var key = Mod.GetLocalizationKey($"Prefix{Name}Descr");
                
                // デバッグ情報を出力
                try
                {
                    TranslateTest2.Instance?.Logger?.Debug($"Oracle AdditionalTooltip - Key: {key}");
                    var rawValue = Language.GetTextValue(key);
                    TranslateTest2.Instance?.Logger?.Debug($"Oracle Raw Value: \"{rawValue}\"");
                }
                catch { }
                
                // より安全なローカリゼーション取得（適切なフォールバック値を提供）
                return Language.GetOrRegister(key, () => "+{A}% whip tag crit chance, +{B}% tag damage, +{C}% whip range");
            }
        }

        public override void SetStaticDefaults()
        {
            // ローカリゼーションテキストの初期化
            var tooltip = AdditionalTooltip;
            try
            {
                TranslateTest2.Instance?.Logger?.Debug($"Oracle SetStaticDefaults - Tooltip: \"{tooltip.Value}\"");
            }
            catch { }
        }
    }
}